    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>disable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Title>Tueffy.PiShockApi</Title>
    <Authors>Tueffy</Authors>
    <Copyright>Copyright (c) Tueffy 2023</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/TueffyT</PackageProjectUrl>
    <RepositoryUrl>https://github.com/TueffyT</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageId>Tueffy.PiShockApi</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging" Version="7.0.0" />
    <PackageReference Include="Refit" Version="6.3.2" />
  </ItemGroup>

</Project>
